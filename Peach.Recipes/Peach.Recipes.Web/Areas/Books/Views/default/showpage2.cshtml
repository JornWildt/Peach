@model Peach.Recipes.Web.Areas.Books.Models.PageViewModel
@{
  ViewBag.Title = "Opskrift";
}

<h1>@Model.Recipe.Title</h1>

<table>
  <tr>
    <td valign="top">
      <h2>Ingredienser</h2>

      <table>
      @foreach (var ingredient in Model.Recipe.Ingredients)
      {
        <tr>
          <td>@ingredient.Quantity</td>
          <td>@ingredient.Unit</td>
          <td>@ingredient.Title</td>
        </tr>
      }
      </table>
    </td>
    <td valign="top">
      <h2>Fremgangsmåde</h2>

      <p>@Model.Recipe.Description</p>
    </td>
  </tr>
</table>

